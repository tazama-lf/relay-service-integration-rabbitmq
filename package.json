{
  "name": "@tazama-lf/rabbitmq-relay-plugin",
  "version": "1.0.0",
  "description": "RabbitMQ plugin for tazama relay service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "clean": "npx rimraf build node_modules coverage package-lock.json",
    "build": "npx tsc",
    "test": "jest",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier --write \"**/*.ts\"",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint",
    "lint:eslint-unused": "eslint --report-unused-disable-directives",
    "lint:eslint-no-inline": "eslint --no-inline-config",
    "lint:prettier": "prettier --check \"**/*.ts\"",
    "prepare": "husky"
  },
  "author": "Umair Khan",
  "license": "Apache-2.0",
  "dependencies": {
    "@tazama-lf/frms-coe-lib": "5.1.0-rc.2",
    "amqplib": "^0.10.8",
    "dotenv": "^16.5.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@stylistic/eslint-plugin": "^5.1.0",
    "@types/amqplib": "^0.10.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-love": "^121.0.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
